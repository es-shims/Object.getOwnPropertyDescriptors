{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"global-require": [1],
		"id-length": [2, { "min": 1, "max": 30 }],
		"max-nested-callbacks": [2, 3],
		"max-params": [2, 3],
		"max-statements": [2, 15],
		"new-cap": [2, { "capIsNewExceptions": ["IsCallable", "RequireObjectCoercible", "ToObject"] }],
		"no-invalid-this": [1]
	}
}
